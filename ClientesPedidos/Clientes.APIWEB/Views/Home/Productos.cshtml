@using Clientes.Models
@model List<MostrarProductoDTO>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Administrar Productos</h1>
</div>

<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">

        <a asp-action="RegistrarProducto" asp-controller="Home" class="btn btn-success btn-sm"> Nuevo Producto </a>

        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Codigo</th>
                    <th>Descripcion</th>
                    <th>Unidad</th>
                    <th>Precio por Unidad</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Codigo</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Unidad</td>
                        <td>@item.PrecioUnidad</td>                        
                        <td>
                            <a asp-action="ActualizarProducto" asp-controller="Home" asp-route-idProducto=@item.Id class="btn btn-primary btn-sm"> Editar </a>
                            <a asp-action="EliminarProducto" asp-controller="Home" asp-route-idProducto=@item.Id class="btn btn-danger btn-sm"> Eliminar </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index" asp-controller="Home" class="btn btn-warning btn-sm"> Volver al Administrador de Clientes </a>
    </div>
</div>

